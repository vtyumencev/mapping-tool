{
  "name": "mapping-tool",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "build": "sass --no-source-map --style=compressed assets/sass:./assets",
    "watch-sass": "sass --watch --update --style=expanded assets/sass:./assets",
    "browser-sync": "browser-sync start --no-open --proxy 'zza.local' --files \"**/*,!sass/**/*.scss\"",
    "watch-sync": "concurrently --kill-others \"npm run watch-sass\" \"npm run browser-sync\""
  },
  "author": "Slava",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.1",
    "concurrently": "^8.0.1",
    "sass": "^1.62.1"
  }
}